<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/mapcontent"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="359dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.405"
        app:srcCompat="@drawable/mapcontent" />

    <Button
        android:id="@+id/northAmerica"
        android:layout_width="140dp"
        android:layout_height="31dp"
        android:background="@drawable/round_bg11"
        android:text="North America"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/mapcontent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mapcontent"
        app:layout_constraintVertical_bias="0.49" />

    <Button
        android:id="@+id/southAmerica"
        android:layout_width="138dp"
        android:layout_height="40dp"

        android:background="@drawable/round_bg11"
        android:text="South America"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/mapcontent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/northAmerica"
        app:layout_constraintVertical_bias="0.515" />

    <Button
        android:id="@+id/europe"
        android:layout_width="80dp"

        android:layout_height="35dp"
        android:background="@drawable/round_bg11"
        android:text="Europe"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/mapcontent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mapcontent"
        app:layout_constraintVertical_bias="0.373" />

    <Button
        android:id="@+id/africa"
        android:layout_width="75dp"
        android:layout_height="35dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"

        android:background="@drawable/round_bg11"
        android:text="Africa"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/mapcontent"
        app:layout_constraintEnd_toEndOf="@+id/mapcontent"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/europe"
        app:layout_constraintVertical_bias="0.29" />

    <Button
        android:id="@+id/asia"
        android:layout_width="96dp"
        android:layout_height="31dp"
        android:background="@drawable/round_bg11"
        android:text="Asia"
        android:textAllCaps="false"

        app:layout_constraintBottom_toBottomOf="@+id/mapcontent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.838"
        app:layout_constraintStart_toEndOf="@+id/northAmerica"
        app:layout_constraintTop_toTopOf="@+id/mapcontent"
        app:layout_constraintVertical_bias="0.444" />

    <Button
        android:id="@+id/oceania"
        android:layout_width="94dp"
        android:layout_height="40dp"
        android:background="@drawable/round_bg11"
        android:text="Oceania"
        android:textAllCaps="false"

        app:layout_constraintBottom_toBottomOf="@+id/mapcontent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.894"
        app:layout_constraintStart_toEndOf="@+id/southAmerica"
        app:layout_constraintTop_toBottomOf="@+id/asia"
        app:layout_constraintVertical_bias="0.376" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="401dp"
        android:layout_marginTop="86dp"
        android:id="@+id/gridLayout"
        android:background="@drawable/grid11"
        android:columnCount="3"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapcontent">

        <ImageView
            android:id="@+id/one"
            android:layout_width="137dp"
            android:layout_height="198dp"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="clicked"
            android:tag="0"></ImageView>

        <ImageView
            android:id="@+id/two"
            android:layout_width="137dp"
            android:layout_height="198dp"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="clicked"
            android:tag="1"></ImageView>


        <ImageView
            android:id="@+id/three"
            android:layout_width="137dp"
            android:layout_height="198dp"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="clicked"
            android:tag="2"></ImageView>


        <ImageView
            android:id="@+id/four"
            android:layout_width="137dp"
            android:layout_height="200dp"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="clicked"
            android:tag="3"></ImageView>


        <ImageView
            android:id="@+id/five"
            android:layout_width="137dp"
            android:layout_height="200dp"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="clicked"
            android:tag="4"></ImageView>

        <ImageView
            android:id="@+id/six"
            android:layout_width="137dp"
            android:layout_height="200dp"
            android:layout_row="1"
            android:layout_column="2"
            android:onClick="clicked"
            android:tag="5"></ImageView>

    </GridLayout>

    <TextView
        android:id="@+id/appName"
        android:layout_width="329dp"
        android:layout_height="57dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="SMART CITY"
        android:textColor="@color/colorAccent"
        android:textSize="52dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.67"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapcontent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>