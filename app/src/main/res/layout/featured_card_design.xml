<?xml version="1.0" encoding="utf-8"?>

<!--Card View widget-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:id="@+id/cardview"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp"
    app:ignore="NamespaceTypo">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/mv_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/no_internet" />


        <TextView
            android:id="@+id/textvie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mv_image"
            android:layout_centerInParent="true"
            android:lineHeight="20dp"
            android:text="Amjad General Store"
            android:textColor="#2F0170"
            android:textSize="17dp"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/mv_rating"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/textvie"
            android:layout_centerInParent="true"
            android:numStars="5"

            android:rating="4" />


        <TextView
            android:id="@+id/mv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mv_rating"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:text="asbkd asudhlasn saudnas jasdjasl hisajdl asjdlnas"

            android:textColor="@color/black" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>